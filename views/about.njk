{% extends "layout.njk" %}

    {% block head %}
        <title>Courses - localdev</title>
    {% endblock %}

    {% block content %}

        <div id="wrapper">
            <img src="{{ about.avatarURL }}" alt="Imagem de {{ about.name }}">
            <h1>{{ about.role }}</h1>
            <h2>{{ about.name }}</h2>
            <p>{{ about.description }}</p>
        </div>

        <div id="links-footer" class="links">

            {% for link in about.links %}
                <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
            {% endfor %}

        </div>
    {% endblock %}
